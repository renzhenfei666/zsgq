/**index.wxss**/
.container{
  flex-direction: row;
}

.search{
  width:100%;
}

.gd{
  padding:0 20rpx;
  width:100%;
  height:150px;
}

.swiper{
  width:100%;
  height:100%;
}

.swiper-item {
  display: block;
  height: 150px;
}

.img{
  width:100%;
  height:100%;
  border-radius: 10rpx;
}

.icon{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width:100%;
  padding:30rpx;
}

.iconContent{
  width:150rpx;
  height:120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.iconImg{
  margin:0 auto;
  width:70rpx;
  height:70rpx;
  text-align:center;
}

.icontext{
  width:150rpx;
  height:50rpx;
  text-align:center;
  color:#a3a3a3;
  font-size:30rpx;
}

.hot{
  width:100%;
  margin-bottom: 20rpx;
}

.van-cell__title{
  font-size:40rpx;
  font-weight:bold;
  color:#000;
}

.list{
  height:250rpx;
  padding:0 20rpx 30rpx 20rpx
}

.nav{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: row;
}

.icon2{
  width:150rpx;
  height:250rpx;
}

.iconImg2{
  width:100%;
  height:100%;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx 5rpx #c5c5c5;
}

.sortName{
  width:530rpx;
  height:100%;
  margin-left:30rpx;
  display: flex; 
  flex-direction:column;
}

.title{
  font-size:36rpx;
  font-weight: blod;
  color:#000;
  flex:1;
}

.shortIntro{
  font-size:30rpx;
  color:#929292;
}

.author{
  font-size:30rpx;
  color:#da3d3f;
  flex:1;
  align-self: flex-end;
  display: flex;
  justify-content: center;
  align-items: center;
}