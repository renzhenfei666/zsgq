/* pages/ranking/ranking.wxss */
@import "../../colorui/main.wxss";
@import "../../colorui/icon.wxss";
.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f9f9fb;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  /* border-radius: 10rpx 0 0 10rpx; */
  position: absolute;
  background-color: currentColor;
  top: 0;
  left: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.VerticalMain{
  width:520rpx;
  background-color: #fff;
}

.list{
  width:100%;
  height:240rpx;
  margin-top:30rpx;
  padding:0 10px;
}

.nav{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.icon{
  width:160rpx;
  height:240rpx;
}

.iconImg{
  width:100%;
  height:100%;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx 5rpx #c5c5c5;
}

.sortName{
  width:310rpx;
  height:100%;
  display: flex; 
  flex-direction:column;
}

.title{
  font-size:36rpx;
  font-weight: blod;
  color:#000;
  flex:1;
}

.shortIntro{
  width:100%;
  height:100%;
  font-size:25rpx;
  color:#929292;
}

.author{
  font-size:22rpx;
  color:#929292;
  flex:1;
  align-self: flex-end;
  display: flex;
  justify-content: center;
  align-items: center;
}
